		 add3.classList.remove('dsnone');
	}
	
}
function carregaIng(){
	 let ing = document.getElementsByClassName('dsnone');
	 for(let i=0;i<ing.length;i++){
	
	ing[i].classList.add('dsblock');
	ing[i].classList.remove('dsnone');
		
	}
}
